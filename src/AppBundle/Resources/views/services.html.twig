
{% extends "::base.html.twig" %}
{% block title %}services {% endblock %}
{#{% block navbar%}{% endblock %}#}
{%  block body %}

    <h1>Gestion des {{ block('title') }}</h1>

    <div class="row">
        <div class="col-lg-4 col-md-4">
            <h2>Categories</h2>
            <div class="well">
                <form method="post" {{ form_enctype(formCreateCat) }}>
                    {{ form_start(formCreateCat, {'attr': {'novalidate': 'novalidate'}}) }}
                    {#{{ dump() }}#}
                    {% set class='' %}
                    {% if not formCreateCat.Label.vars.valid %}
                        {% set class = 'has-error' %}
                    {% endif %}

                    <div class="form-group {{ class }}">
                        {{ form_label(formCreateCat.Label,'Label :',
                        {'label_attr':{'class':'control-label'}})}}

                        {{ form_widget(formCreateCat.Label,
                        {'attr':{'class':'form-control'}}) }}

                        {{ form_errors(formCreateCat.Label) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(formCreateCat.Type,
                        {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                        {{ form_row(formCreateCat.Color,
                        {'attr':{'class':'form-control'}})}}
                    </div>

                </form>
                {{ form_end(formCreateCat) }}
            </div>
        </div>
        <div class="col-lg-4 col-md-4">
            <h2>Liste des cat√©gories</h2>
        </div>
    </div>

    <hr>
    <div class="row">
        <div class="col-lg-4 col-md-4">
            <h2>Services</h2>
            <div class="well">
                <form method="post" {{ form_enctype(formCreateServ) }}
                {{ form_widget(formCreateServ) }}
            </div>
            <div class="col-lg-4 col-md-4">
                <h2>Liste des services</h2>
            </div>
        </div>
    </div>

{%  endblock %}
