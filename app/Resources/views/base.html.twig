<!DOCTYPE html>
<html>
<head>
    {% block head %}
    <title>{% block title %}{% endblock %} - Dolicom</title>
        {% block stylesheets %}
            <link rel="stylesheet"
                  href="{{ asset('assets/css/test.css') }}" type="text/css" />
            <link rel="stylesheet"
                  href="{{ asset('assets/css/bootstrap.css') }}">
            <link rel="stylesheet"
                  href="{{ asset('assets/css/font-awesome.css') }}">
        {% endblock %}
    {% endblock %}
</head>
<body>
        {#{% block navbar %}#}
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="{{ path('dolib_users') }}">Dolicom</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li class="{% if app.request.attributes.get('_route') == 'dolib_users' %}active{% endif %}"><a href="{{ path('dolib_users') }}">Gestion utilisateurs</a></li>
                        <li class="{% if app.request.attributes.get('_route') == 'dolib_categories' %}active{% endif %}"><a href="{{ path('dolib_categories') }}">Gestion services</a></li>
                        <li class="{% if app.request.attributes.get('_route') == 'dolib_invoices' %}active{% endif %}"><a href="{{ path('dolib_invoices') }}">Gestion invoices</a></li>
                    </ul>
                </div>
            </nav>
        {#{% endblock %}#}
        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            <script src="{{ asset('assets/js/jquery.js') }}"></script>
            <script src="{{ asset('assets/js/bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>
